<?xml version="1.0" encoding="UTF-8"?>
<grammar start="SENTENCE">
    <!-- Top-level -->
    <rule number="1">
        <lhs>SENTENCE</lhs>
        <rhs>S</rhs>
    </rule>

    <!-- === Sentence patterns === -->

    <!-- Copular: NP + copula + adjective (el perro es grande) -->
    <rule number="2">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>V_COP</rhs>
        <rhs>A</rhs>
    </rule>

    <!-- Intransitive: NP + verb (el perro corre) -->
    <rule number="3">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>VP</rhs>
    </rule>

    <!-- Existential: existential verb + NP (hay un perro) -->
    <rule number="4">
        <lhs>S</lhs>
        <rhs>V_EX</rhs>
        <rhs>NP</rhs>
    </rule>

    <!-- Transitive: NP + verb + NP (el hombre come la manzana) -->
    <rule number="5">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>VP</rhs>
        <rhs>NP</rhs>
    </rule>

    <!-- Copular with adverb: NP + copula + ADV + adjective (el perro es muy grande) -->
    <rule number="6">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>V_COP</rhs>
        <rhs>ADV</rhs>
        <rhs>A</rhs>
    </rule>

    <!-- Negated copular: NP + NEG + copula + adjective (el perro no es grande) -->
    <rule number="7">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>NEG</rhs>
        <rhs>V_COP</rhs>
        <rhs>A</rhs>
    </rule>

    <!-- Prepositional: NP + copula + PP (el gato está en la casa) -->
    <rule number="8">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>V_COP</rhs>
        <rhs>PP</rhs>
    </rule>

    <!-- Intransitive + PP: NP + verb + PP (el niño corre en el parque) -->
    <rule number="9">
        <lhs>S</lhs>
        <rhs>NP</rhs>
        <rhs>VP</rhs>
        <rhs>PP</rhs>
    </rule>

    <!-- === Noun phrase patterns === -->

    <!-- NP: determiner + noun (el perro) -->
    <rule number="10">
        <lhs>NP</lhs>
        <rhs>DET</rhs>
        <rhs>N</rhs>
    </rule>

    <!-- NP: determiner + noun + adjective (el perro grande) -->
    <rule number="11">
        <lhs>NP</lhs>
        <rhs>DET</rhs>
        <rhs>N</rhs>
        <rhs>A</rhs>
    </rule>

    <!-- NP: determiner + adjective + noun (el gran perro) -->
    <rule number="12">
        <lhs>NP</lhs>
        <rhs>DET</rhs>
        <rhs>A</rhs>
        <rhs>N</rhs>
    </rule>

    <!-- NP: determiner + noun + PP (el libro de la mujer) -->
    <rule number="13">
        <lhs>NP</lhs>
        <rhs>DET</rhs>
        <rhs>N</rhs>
        <rhs>PP</rhs>
    </rule>

    <!-- NP: determiner + noun + adjective + PP (el perro grande de la casa) -->
    <rule number="14">
        <lhs>NP</lhs>
        <rhs>DET</rhs>
        <rhs>N</rhs>
        <rhs>A</rhs>
        <rhs>PP</rhs>
    </rule>

    <!-- === Verb phrase patterns === -->

    <!-- VP: single verb (corre) -->
    <rule number="20">
        <lhs>VP</lhs>
        <rhs>V</rhs>
    </rule>

    <!-- VP: negated verb (no corre) -->
    <rule number="21">
        <lhs>VP</lhs>
        <rhs>NEG</rhs>
        <rhs>V</rhs>
    </rule>

    <!-- VP: verb + adverb (come bien) -->
    <rule number="22">
        <lhs>VP</lhs>
        <rhs>V</rhs>
        <rhs>ADV</rhs>
    </rule>

    <!-- VP: adverb + verb (siempre corre) -->
    <rule number="23">
        <lhs>VP</lhs>
        <rhs>ADV</rhs>
        <rhs>V</rhs>
    </rule>

    <!-- === Prepositional phrase === -->

    <!-- PP: preposition + NP (en la casa) -->
    <rule number="30">
        <lhs>PP</lhs>
        <rhs>PREP</rhs>
        <rhs>NP</rhs>
    </rule>
</grammar>
